<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <p class="title">
    <%= micropost.title %>
  </p>
  <p class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </p>
  <p class="timestamp">
    Posted <%= time_ago_in_words micropost.created_at %> ago.
    <% if current_user? micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
        data: {confirm: "You sure?"} %>
    <% end %>
  </p>

    <% if current_user.following? micropost.user or current_user == micropost.user %>
      <div class="comments_micropost">
        <% micropost.comments.each do |c| %>
          <% user = User.find_by id: c.user_id %>
            <div class="sub_comment">
              <%= gravatar_for user %>
              <span class="comment_name">
                <%= user.name %>
                </span>
              <span class="time_comment">
                <%=  time_ago_in_words c.created_at %> ago
              </span>
              <span class="comment_content">
                <%= c.content %>
              </span>
              <% if current_user == user %>
                <%= link_to "Delete", c,
                  method: :delete, data: {confirm: "You sure?"} %>
              <% end %>
            </div>
        <% end %>
      </div>
      <p>
        <%= form_for Comment.new do |f| %>
          <%= hidden_field_tag :user_id, current_user.id %>
          <%= hidden_field_tag :micropost_id, micropost.id %>
          <%= f.text_area :content, class:"comment-box" %>
          <%= f.submit "Comment", class: "btn btn-primary btn-sm
            comment-button" %>
        <% end %>
      </p>
    <% end %>
</li>
